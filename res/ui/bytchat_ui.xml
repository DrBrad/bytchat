                    <attribute name="accel">&lt;control&gt;X</attribute>
                </item>
                <item>
                    <attribute name="action">win.paste</attribute>
                    <attribute name="label" translatable="yes">Paste</attribute>
                    <attribute name="accel">&lt;control&gt;V</attribute>
                </item>
                <item>
                    <attribute name="action">win.delete</attribute>
                    <attribute name="label" translatable="yes">_Delete</attribute>
                </item>
                <item>
                    <attribute name="action">win.select-all</attribute>
                    <attribute name="label" translatable="yes">Select _All</attribute>
                    <attribute name="accel">&lt;control&gt;A</attribute>
                </item>
            </section>
        </submenu>
        <submenu>
            <attribute name="label" translatable="true">_View</attribute>
            <section>
                <item>
                    <attribute name="action">win.debug</attribute>
                    <attribute name="label" translatable="yes">Debug Mode</attribute>
                </item>
            </section>
        </submenu>
        <submenu>
            <attribute name="label" translatable="true">_Window</attribute>
        </submenu>
        <submenu>
            <attribute name="label" translatable="true">_Help</attribute>
            <section>
                <item>
                    <attribute name="action">app.website</attribute>
                    <attribute name="label" translatable="yes">Website</attribute>
